---
export interface props {
  showNotification?: boolean;
}

const { showNotification } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Cloudflare App with Astro | Atyantik Technologies</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    {
      showNotification && (
        <header class="notification">
          <p>Uploaded assets are auto-deleted every 2 minutes.</p>
        </header>
      )
    }
    <main>
      <slot />
    </main>
    <footer>
      Powered by <a href="https://www.atyantik.com">Atyantik Technologies</a>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --primary: #e36002;
  }
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* Set html and body to full height and apply Flexbox */
  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    font-size: 18px;
    font-family: "Roboto", serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  /* Allow main to grow and fill available space */
  main {
    flex: 1;
    display: flex;
    justify-content: center; /* Center horizontally */
    align-items: center; /* Center vertically if content is small */
    padding: 20px;
    text-align: center;
  }

  a {
    color: var(--primary);
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
  /* Footer styling */
  footer {
    border-top: #dfdfdf solid 1px;
    padding: 10px 0;
    text-align: center;
  }
</style>
