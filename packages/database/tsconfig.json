{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist/types",
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "types": ["@cloudflare/workers-types"],
    "paths": {
      "@schema/*": ["./src/schema/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["worker-configuration.d.ts", "src/**/*.ts"]
}
